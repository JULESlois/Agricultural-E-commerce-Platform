{
  "name": "agricultural-backend",
  "version": "1.0.0",
  "description": "Agricultural E-commerce Platform Backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:market\"",
    "dev:auth": "cd auth && npm run dev",
    "dev:market": "cd market && npm run dev",
    "start": "concurrently \"npm run start:auth\" \"npm run start:market\"",
    "start:auth": "cd auth && npm start",
    "start:market": "cd market && npm start",
    "install:all": "cd auth && npm install && cd ../market && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}